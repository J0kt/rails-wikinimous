<div class="container my-5">
  <div class="card p-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h1 class="card-title"><%= @article.title %></h1>
      <div>
        <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-outline-secondary btn-sm me-2' %>
        <%= link_to 'Delete', article_path(@article),
                    data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete '#{@article.title}'?" },
                    class: 'btn btn-outline-danger btn-sm' %>
      </div>
    </div>

    <div class="card-body">
      <p class="card-text"><%= @article.content %></p>
    </div>

    <div class="card-footer bg-white border-top-0 pt-3">
      <%= link_to 'Back to articles', articles_path, class: 'btn btn-link' %>
    </div>
  </div>
</div>
